<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <form class=" new-comment-form">
          <div class="form-group">
            <label for="comment-content">Comment:</label>
            <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
    </form>
    {{#if comments.length}}
    <div class="col-md-6 comment-list">
      <h3>Comments:</h3>

      {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/comment/{{comment.id}}">{{comment.content}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/comment.js"></script>